// =============================================================================
// SUPPLIER SERVICE DATABASE SCHEMA
// Service: supplier-service (Port 3004)
// Database: supplier_db
// Owner: Supplier information, contacts, price history, product sourcing
// =============================================================================

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPPLIER_DATABASE_URL")
}

// =============================================================================
// SUPPLIERS
// =============================================================================

model Supplier {
  id              String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supplierCode    String         @unique @db.VarChar(50)
  supplierName    String         @db.VarChar(255)
  legalName       String?        @db.VarChar(255)
  supplierType    SupplierType   @default(manufacturer)
  // Contact info
  primaryEmail    String?        @db.VarChar(255)
  primaryPhone    String?        @db.VarChar(20)
  whatsappNumber  String?        @db.VarChar(20)
  website         String?        @db.VarChar(255)
  // Address
  address         String?
  city            String?        @db.VarChar(100)
  province        String?        @db.VarChar(100)
  postalCode      String?        @db.VarChar(10)
  country         String         @default("Indonesia") @db.VarChar(100)
  // Business info
  taxId           String?        @db.VarChar(50)
  businessLicense String?        @db.VarChar(100)
  // Banking
  bankName        String?        @db.VarChar(100)
  bankAccountName String?        @db.VarChar(255)
  bankAccountNumber String?      @db.VarChar(50)
  // Terms
  paymentTermDays Int            @default(30)
  creditLimit     Decimal?       @db.Decimal(15, 2)
  currency        String         @default("IDR") @db.VarChar(3)
  // Performance
  rating          Decimal?       @db.Decimal(3, 2)
  onTimeDeliveryRate Decimal?    @db.Decimal(5, 2)
  qualityScore    Decimal?       @db.Decimal(5, 2)
  // Status
  status          SupplierStatus @default(pending)
  verifiedAt      DateTime?      @db.Timestamptz(6)
  notes           String?
  // Audit
  createdBy       String?        @db.Uuid
  updatedBy       String?        @db.Uuid
  createdAt       DateTime       @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime       @updatedAt @db.Timestamptz(6)
  deletedAt       DateTime?      @db.Timestamptz(6)

  contacts        SupplierContact[]
  productCatalog  SupplierProductCatalog[]
  priceHistory    SupplierPriceHistory[]
  documents       SupplierDocument[]

  @@index([supplierCode])
  @@index([supplierName])
  @@index([status])
  @@index([deletedAt])
  @@map("supplier")
}

model SupplierContact {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supplierId   String   @db.Uuid
  contactName  String   @db.VarChar(255)
  title        String?  @db.VarChar(100) // Sales Manager, Owner, etc.
  department   String?  @db.VarChar(100)
  email        String?  @db.VarChar(255)
  phoneNumber  String?  @db.VarChar(20)
  whatsapp     String?  @db.VarChar(20)
  isPrimary    Boolean  @default(false)
  notes        String?
  createdAt    DateTime @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @db.Timestamptz(6)

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@index([supplierId])
  @@map("supplier_contact")
}

// =============================================================================
// PRODUCT CATALOG & PRICING
// =============================================================================

model SupplierProductCatalog {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supplierId      String   @db.Uuid
  productId       String   @db.Uuid // Reference to Product Service
  supplierSku     String?  @db.VarChar(100) // Supplier's own SKU
  supplierProductName String? @db.VarChar(255) // Supplier's name for product
  // Pricing
  unitCost        Decimal  @db.Decimal(15, 2)
  minOrderQty     Int      @default(1)
  bulkPriceQty    Int?     // Quantity for bulk pricing
  bulkUnitCost    Decimal? @db.Decimal(15, 2)
  // Lead time
  leadTimeDays    Int      @default(7)
  // Grosir bundle info
  bundleSize      Int?     // Units per bundle
  bundleBreakdown Json?    // e.g., {"S": 2, "M": 5, "L": 4, "XL": 1}
  // Status
  isActive        Boolean  @default(true)
  lastOrderedAt   DateTime? @db.Timestamptz(6)
  notes           String?
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@unique([supplierId, productId])
  @@index([supplierId])
  @@index([productId])
  @@map("supplier_product_catalog")
}

model SupplierPriceHistory {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supplierId   String   @db.Uuid
  productId    String   @db.Uuid
  unitCost     Decimal  @db.Decimal(15, 2)
  minOrderQty  Int
  effectiveFrom DateTime @db.Timestamptz(6)
  effectiveTo  DateTime? @db.Timestamptz(6)
  changeReason String?  @db.VarChar(255)
  recordedBy   String?  @db.Uuid
  createdAt    DateTime @default(now()) @db.Timestamptz(6)

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@index([supplierId])
  @@index([productId])
  @@index([effectiveFrom])
  @@map("supplier_price_history")
}

// =============================================================================
// SUPPLIER DOCUMENTS
// =============================================================================

model SupplierDocument {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supplierId   String       @db.Uuid
  documentType DocumentType
  documentName String       @db.VarChar(255)
  fileUrl      String
  fileSize     Int?
  mimeType     String?      @db.VarChar(100)
  expiresAt    DateTime?    @db.Timestamptz(6)
  uploadedBy   String?      @db.Uuid
  createdAt    DateTime     @default(now()) @db.Timestamptz(6)

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@index([supplierId])
  @@index([documentType])
  @@map("supplier_document")
}

// =============================================================================
// SERVICE OUTBOX (For future Kafka migration)
// =============================================================================

model ServiceOutbox {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  aggregateType String    @db.VarChar(100)
  aggregateId   String    @db.Uuid
  eventType     String    @db.VarChar(100)
  payload       Json
  metadata      Json?
  isPublished   Boolean   @default(false)
  publishedAt   DateTime? @db.Timestamptz(6)
  retryCount    Int       @default(0)
  lastError     String?
  createdAt     DateTime  @default(now()) @db.Timestamptz(6)

  @@index([isPublished, createdAt])
  @@index([aggregateType, aggregateId])
  @@map("service_outbox")
}

// =============================================================================
// ENUMS
// =============================================================================

enum SupplierType {
  manufacturer
  distributor
  wholesaler
  agent
}

enum SupplierStatus {
  pending
  active
  inactive
  suspended
  blacklisted
}

enum DocumentType {
  business_license
  tax_registration
  product_catalog
  price_list
  quality_certificate
  contract
  other
}
