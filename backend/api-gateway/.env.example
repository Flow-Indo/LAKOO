API_GATEWAY_PORT=3000
NODE_ENV=production

# Gateway HMAC auth (must match every service's GATEWAY_SECRET)
GATEWAY_SECRET=dev-gateway-secret

# JWT verification (used by authMiddleware)
JWT_SECRET=replace-me

# Local testing helpers (disable in real production)
SERVICE_SECRET=dev-service-secret
ENABLE_TEST_TOKEN_ENDPOINT=false
# Max allowable clock skew for service-to-service HMAC (seconds). Useful for local Docker Desktop time drift.
SERVICE_AUTH_MAX_SKEW_SECONDS=300
# Proxy timeout to upstream services (milliseconds).
GATEWAY_PROXY_TIMEOUT_MS=30000
DISABLE_BLACKLIST=true
BLACKLIST_STRICT=false

# Service URLs (use localhost when running services locally; use container names when running in Docker network)
AUTH_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3006
PRODUCT_SERVICE_URL=http://localhost:3002
SELLER_SERVICE_URL=http://localhost:3015
CART_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3007
ADDRESS_SERVICE_URL=http://localhost:3010
LOGISTIC_SERVICE_URL=http://localhost:3009

# Blacklist service (if enabled)
BLACKLIST_SERVICE_URL=http://localhost:8081
