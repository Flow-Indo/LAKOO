# Server
PORT=3009
NODE_ENV=development

# Database
LOGISTICS_DATABASE_URL="postgresql://user:password@localhost:5432/logistics_db"

# Authentication (Gateway Trust Model)
GATEWAY_SECRET_KEY=your-gateway-secret

# Service-to-service authentication (HMAC)
# Used for `x-service-auth` + `x-service-name` headers
SERVICE_SECRET=your-service-secret

# Service URLs
ORDER_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3008

# Biteship Integration
BITESHIP_API_KEY=your-biteship-api-key
BITESHIP_BASE_URL=https://api.biteship.com/v1
BITESHIP_WEBHOOK_SECRET=your-biteship-webhook-secret
BITESHIP_TIMEOUT_MS=15000
BITESHIP_RETRIES=2

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Rate Cache
RATE_CACHE_TTL_HOURS=24

# Outbound HTTP (service-to-service) timeouts
OUTBOUND_HTTP_TIMEOUT_MS=5000
OUTBOUND_HTTP_RETRIES=2
