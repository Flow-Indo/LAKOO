# ========================================
# PAYMENT SERVICE ENVIRONMENT VARIABLES
# ========================================

# Application
NODE_ENV=development
PORT=3007
SERVICE_NAME=payment-service

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5437/payment_db?schema=public

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6387

# Kafka (for event messaging)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=payment-service
KAFKA_CONSUMER_GROUP=payment-service-group

# ========================================
# SERVICE URLS (Microservices Communication)
# ========================================
ORDER_SERVICE_URL=http://localhost:3006
WAREHOUSE_SERVICE_URL=http://localhost:3012
NOTIFICATION_SERVICE_URL=http://localhost:3008
WALLET_SERVICE_URL=http://localhost:3008

# ========================================
# XENDIT PAYMENT GATEWAY
# ========================================
XENDIT_SECRET_KEY=xnd_development_xxxxx
XENDIT_PUBLIC_KEY=xnd_public_development_xxxxx
XENDIT_WEBHOOK_VERIFICATION_TOKEN=your-webhook-verification-token

# Payment URLs (redirect after payment)
PAYMENT_SUCCESS_URL=https://your-domain.com/payment/success
PAYMENT_FAILURE_URL=https://your-domain.com/payment/failed

# ========================================
# SECURITY
# ========================================
# Gateway secret - shared with API Gateway for request verification
GATEWAY_SECRET=your-gateway-secret

# Internal service-to-service authentication
SERVICE_SECRET=your-service-auth-secret

# Outbound HTTP policy (service-to-service)
OUTBOUND_HTTP_TIMEOUT_MS=8000

# ========================================
# EMAIL CONFIGURATION
# ========================================
PLACEHOLDER_EMAIL_DOMAIN=example.com

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CRON JOBS
# ========================================
# Enable/disable scheduled jobs
ENABLE_EXPIRATION_CRON=true
EXPIRATION_CRON_SCHEDULE=0 * * * *
