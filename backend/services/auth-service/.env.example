# Server
PORT=3001
NODE_ENV=development

# User Service (for user data)
USER_SERVICE_URL=http://localhost:3004

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Gateway Authentication
GATEWAY_SECRET=internal-gateway-secret

# Service Authentication (for inter-service communication)
SERVICE_NAME=auth-service
SERVICE_SECRET=your-service-secret-key

# WhatsApp/OTP (optional)
WHATSAPP_API_URL=
WHATSAPP_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
